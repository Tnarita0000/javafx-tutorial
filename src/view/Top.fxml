<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.* ?>
<?import javafx.geometry.* ?>
<?import javafx.scene.control.* ?>
<?import javafx.scene.layout.* ?>
<?import javafx.scene.text.* ?>
<?import javafx.scene.Group ?>
<?import javafx.event.* ?>

<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml">
  <stylesheets>
    <URL value="@../stylesheets/top.css"/>
  </stylesheets>

  <top>
    <GridPane alignment="center" hgap="10" vgap="10" style="-fx-background-color: black;">
      <padding><Insets top="15" right="25" bottom="15" left="25"/></padding>
      <children>
        <Label text="Thanks for comming!" style="-fx-font: 25px 'Serif'; -fx-text-fill: white"/>
      </children>
    </GridPane>
  </top>

  <center>
    <GridPane alignment="center" hgap="10" vgap="10" fx:id="gridForm">
      <children>
        <Label text="Host Name:"
          GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="hostnameInput"
          GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="User Name:"
          GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="usernameInput"
          GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Password:"
          GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="passwordInput"
          GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Port:"
          GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField text="3306" fx:id="portInput"
          GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="SSH Port Forwarding:"
          GridPane.columnIndex="0" GridPane.rowIndex="4"/>

        <HBox GridPane.columnIndex="1" GridPane.rowIndex="4" spacing="0" >
          <padding><Insets top="15" right="25" bottom="15" left="25"/></padding>
          <fx:define> <ToggleGroup fx:id="toggle1"/> </fx:define>
          <RadioButton fx:id="sshFalse" text="No"  toggleGroup="$toggle1" onAction="#selectSshOption" selected="true"/>
          <RadioButton fx:id="sshTrue"  text="Yes" toggleGroup="$toggle1" onAction="#selectSshOption" />
        </HBox>

        <Label fx:id="sshHostnameLabel" text="SSH Host Name:"
          GridPane.columnIndex="0" GridPane.rowIndex="5" managed="false"/>
        <TextField fx:id="sshHostnameInput"
          GridPane.columnIndex="1" GridPane.rowIndex="5" managed="false"/>

        <Label fx:id="sshPortLabel" text="SSH Port:"
          GridPane.columnIndex="0" GridPane.rowIndex="6" managed="false"/>
        <TextField text="22" fx:id="sshPortInput"
          GridPane.columnIndex="1" GridPane.rowIndex="6" managed="false"/>

        <Label fx:id="sshUsernameLabel" text="SSH User Name:"
          GridPane.columnIndex="0" GridPane.rowIndex="7" managed="false"/>
        <TextField fx:id="sshUsernameInput"
          GridPane.columnIndex="1" GridPane.rowIndex="7" managed="false"/>

        <Label fx:id="sshPasswordLabel" text="SSH Password:"
          GridPane.columnIndex="0" GridPane.rowIndex="8" managed="false"/>
        <PasswordField fx:id="sshPasswordInput"
          GridPane.columnIndex="1" GridPane.rowIndex="8" managed="false"/>

        <Button fx:id="connectButton" text="Connect"
          GridPane.columnIndex="1" GridPane.rowIndex="5" onAction="#connectMySQL" />
      </children>
    </GridPane>
  </center>
</fx:root>

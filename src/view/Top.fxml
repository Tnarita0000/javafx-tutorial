<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml">
  <stylesheets>
    <URL value="@../stylesheets/top.css"/>
  </stylesheets>

  <top>
    <GridPane alignment="center" hgap="10" vgap="10" style="-fx-background-color: black;">
      <padding><Insets top="15" right="25" bottom="15" left="25"/></padding>
      <children>
        <Label text="Thanks for comming!" style="-fx-font: 25px 'Serif'; -fx-text-fill: white"/>
      </children>
    </GridPane>
  </top>

  <center>
    <GridPane alignment="center" hgap="10" vgap="10" fx:id="gridForm">
      <children>
        <Label text="Host Name:"
          GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="hostname"
          GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="User Name:"
          GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="username"
          GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Password:"
          GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="password"
          GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Port:"
          GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField text="3306" fx:id="port"
          GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="SSH Port Forwarding:"
          GridPane.columnIndex="0" GridPane.rowIndex="4"/>

        <HBox
          GridPane.columnIndex="1" GridPane.rowIndex="4" spacing="20" >
          <padding><Insets top="15" right="25" bottom="15" left="25"/></padding>
          <RadioButton fx:id="sshFalse" selected="true" text="No" onAction="#selectSshOption" >
            <toggleGroup>
              <ToggleGroup fx:id="toggle1"/>
            </toggleGroup>
          </RadioButton>
          <RadioButton fx:id="sshTrue" text="Yes" toggleGroup="$toggle1" onAction="#selectSshOption" />
        </HBox>

